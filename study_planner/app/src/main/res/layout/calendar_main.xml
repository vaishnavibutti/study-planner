<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"><!-- Add TextView to display the date -->


    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbarc"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:layout_marginTop="1dp"
        android:layout_marginBottom="675dp"
        android:background="@color/black"
        android:theme="@style/ThemeOverlay.AppCompat.Dark"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0"


        />

    <LinearLayout
        android:id="@+id/table"
        android:layout_width="413dp"
        android:layout_height="194dp"
        android:background="@drawable/back"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.854">

        <TextView
            android:id="@+id/date_view"
            android:layout_width="match_parent"
            android:layout_height="33dp"
            android:background="@drawable/back"
            android:gravity="center"
            android:text="DATE"
            android:textAlignment="center"
            android:textColor="@android:color/background_dark"
            android:textStyle="bold" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="39dp">

            <TextView
                android:id="@+id/no_of_lectures"
                android:layout_width="199dp"
                android:layout_height="match_parent"
                android:background="@drawable/back"
                android:gravity="center"
                android:text="Lectures" />

            <TextView
                android:id="@+id/totallectures"
                android:layout_width="214dp"
                android:layout_height="match_parent"
                android:background="@drawable/back"
                android:gravity="center"
                android:text="0" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="34dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/no_of_assignments"
                android:layout_width="181dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@drawable/back"
                android:gravity="center"
                android:text="Assignments" />

            <TextView
                android:id="@+id/totalassignments"
                android:layout_width="196dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@drawable/back"
                android:gravity="center"
                android:text="0" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="38dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/no_of_studyplan"
                android:layout_width="181dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@drawable/back"
                android:gravity="center"
                android:text="Study Plan" />

            <TextView
                android:id="@+id/totalstudyplan"
                android:layout_width="196dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@drawable/back"
                android:gravity="center"
                android:text="0" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/no_of_exams"
                android:layout_width="199dp"
                android:layout_height="37dp"
                android:background="@drawable/back"
                android:gravity="center"
                android:text="Exams"
                android:textAlignment="center" />

            <TextView
                android:id="@+id/totalexams"
                android:layout_width="196dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@drawable/back"
                android:gravity="center"
                android:text="0" />
        </LinearLayout>

    </LinearLayout>

    <CalendarView
        android:id="@+id/calendar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.491"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.198"></CalendarView>
</androidx.constraintlayout.widget.ConstraintLayout>